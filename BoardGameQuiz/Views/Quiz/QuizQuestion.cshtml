@model QuizQuestionViewModel
@{
ViewBag.Title = "Quiz Game - Question";
}

<head>
    <link rel="stylesheet" href="~/css/quiz.css">
</head>

<div class="quiz-container game-ui">
    <header class="quiz-header">
        <div class="progress">@Model.QuestionNumber / @Model.TotalQuestions</div>
        <div class="timer">
            <i class="icon-timer"></i>
            <span id="time">00:30</span>
        </div>
        <button class="settings">
            <i class="icon-settings"></i>
        </button>
    </header>

    <main class="quiz-content">
        <h1>@Model.Question</h1>
        <div class="options">
            @for (int i = 0; i < Model.Options.Count; i++)
            {
                <button class="option">@Model.Options[i]</button>
            }
        </div>
    </main>

    <footer class="quiz-footer">
        <button class="next-btn">Next</button>
    </footer>
</div>

<script src="~/js/quiz.js"></script>
